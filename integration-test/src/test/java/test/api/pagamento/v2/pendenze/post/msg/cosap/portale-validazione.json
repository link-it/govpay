{
	"type": "object",
	"required": [
		"idPendenza",
		"soggettoPagatore",
		"importo"
	],
	"properties": {
		"idPendenza": {
			"type": "string",
			"pattern": "[A-Za-z0-9\\-_]{1,35}"
		},
		"soggettoPagatore": {
			"type": "object",
			"required": [
				"identificativo",
				"anagrafica"
			],
			"properties": {
				"identificativo": {
					"type": "string",
					"pattern": "[A-Z]{6}\\d{2}[A-Z]\\d{2}[A-Z]\\d{3}[A-Z]"
				},
				"anagrafica": {
					"type": "string"
				}
			}
		},
		"importo": {
			"type": "number",
			"multipleOf": "1.00"
		}
	}
}