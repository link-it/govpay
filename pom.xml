<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>it.govpay</groupId>
	<artifactId>govpay</artifactId>
	<version>3.1.0</version>
	<packaging>pom</packaging>
	<name>GovPay</name>

	<modules>
		<module>govpay-orm-beans</module>
		<module>govpay-orm</module>
		<module>govpay-core-beans</module>
		<module>govpay-stampe</module>
		<module>govpay-core-rs</module>
		<module>govpay-core</module>
		<module>govpay-web</module>
		<module>govpay-wc</module>
		<module>govpay-api-pagamento</module>
		<module>govpay-api-pendenze</module>
		<module>govpay-api-ragioneria</module>
		<module>govpay-api-backoffice</module>
		<module>govpay-ear</module>
		<module>govpay-web-console</module>
	</modules>

	<profiles>
		<profile>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>!env</name>
				</property>
			</activation>
			<properties>
				<env>template</env>
			</properties>
		</profile>
	</profiles>

	<properties>
		<javaVersion>1.8</javaVersion>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<openspcoop2.version>3.0.3-SNAPSHOT</openspcoop2.version>
		<logger.version>2.6.2</logger.version>
		<rel-to-parent>.</rel-to-parent>
		<govpay-api-backoffice-auth>basic</govpay-api-backoffice-auth>
		<govpay-api-pagamento-auth>basic</govpay-api-pagamento-auth>
		<govpay-api-pendenze-auth>basic</govpay-api-pendenze-auth>
		<govpay-api-ragioneria-auth>basic</govpay-api-ragioneria-auth>
		<govpay-api-pagopa-auth>basic</govpay-api-pagopa-auth>
	</properties>

	<dependencyManagement>
		<dependencies>

			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>1.10</version>
			</dependency>

			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-core-beans</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>

			<dependency>
	            <groupId>it.govpay</groupId>
	            <artifactId>govpay-core-rs</artifactId>
	            <version>${project.version}</version>
	            <type>jar</type>
	            <scope>compile</scope>
            </dependency>

			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-core</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>

			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-ear</artifactId>
				<version>${project.version}</version>
				<type>ear</type>
				<scope>compile</scope>
			</dependency>

			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-web</artifactId>
				<version>${project.version}</version>
				<type>war</type>
				<scope>compile</scope>
			</dependency>


			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-ejb</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>

			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-orm-beans</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>

			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-orm</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>

			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-stampe</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			
			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-wc</artifactId>
				<version>${project.version}</version>
				<type>war</type>
				<scope>compile</scope>
			</dependency>
			
			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-api-pagamento</artifactId>
				<version>${project.version}</version>
