				<scope>compile</scope>
			</dependency>
			
			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-api-pendenze</artifactId>
				<version>${project.version}</version>
				<type>war</type>
				<scope>compile</scope>
			</dependency>
			
			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-api-gestione</artifactId>
				<version>${project.version}</version>
				<type>war</type>
				<scope>compile</scope>
			</dependency>
			
			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-api-ragioneria</artifactId>
