			<dependency>
				<groupId>org.openspcoop2</groupId>
				<artifactId>openspcoop2_generic-project</artifactId>
				<version>${openspcoop2.version}</version>
			</dependency>

			<dependency>
				<groupId>org.openspcoop2</groupId>
