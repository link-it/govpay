				<type>war</type>
				<scope>compile</scope>
			</dependency>
			
			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-api-backoffice</artifactId>
				<version>${project.version}</version>
				<type>war</type>
				<scope>compile</scope>
			</dependency>
			
			<dependency>
				<groupId>it.govpay</groupId>
				<artifactId>govpay-web-console</artifactId>
