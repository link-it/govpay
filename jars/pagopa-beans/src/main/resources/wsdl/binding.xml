<!DOCTYPE xml>
<jxb:bindings xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:jxb="https://jakarta.ee/xml/ns/jaxb" 
	version="3.0">

	<jxb:globalBindings>
		<jxb:javaType name="java.time.LocalTime" xmlType="xs:time"
			parseMethod="it.govpay.core.utils.adapter.DataTypeAdapterCXF.parseLocalTime"
			printMethod="it.govpay.core.utils.adapter.DataTypeAdapterCXF.printLocalTime" />
			
		<jxb:javaType name="java.time.LocalDateTime" xmlType="xs:dateTime"
			parseMethod="it.govpay.core.utils.adapter.DataTypeAdapterCXF.parseLocalDateTime"
			printMethod="it.govpay.core.utils.adapter.DataTypeAdapterCXF.printLocalDateTime" />
			
		<jxb:javaType name="java.time.LocalDate" xmlType="xs:date"
			parseMethod="it.govpay.core.utils.adapter.DataTypeAdapterCXF.parseLocalDate"
			printMethod="it.govpay.core.utils.adapter.DataTypeAdapterCXF.printLocalDate" />

		<jxb:javaType name="java.lang.Integer" xmlType="xs:gYear"
			parseMethod="it.govpay.core.utils.adapter.DataTypeAdapter.parseYear"
			printMethod="it.govpay.core.utils.adapter.DataTypeAdapter.printYear" />
					
		<jxb:javaType name="java.math.BigDecimal" xmlType="xs:decimal"
			parseMethod="it.govpay.core.utils.adapter.DataTypeAdapter.parseImporto"
			printMethod="it.govpay.core.utils.adapter.DataTypeAdapter.printImporto" />
	</jxb:globalBindings>
	
</jxb:bindings>
